#!/usr/bin/env bash

set -ex

BOSH_DATA_DIRECTORY=${BOSH_DATA_DIRECTORY:-/var/vcap/store}
BACKUP_DIRECTORY="$BBR_ARTIFACT_DIRECTORY"/shared
BLOBS_DIRECTORY="$BOSH_DATA_DIRECTORY"/shared

BLOBSTORE_OWNER=${BLOBSTORE_OWNER:-vcap}
BLOBSTORE_OWNER_GROUP=${BLOBSTORE_OWNER_GROUP:-vcap}

<%
  dir_mapping = {
    "droplets" => "cc.droplets.droplet_directory_key", 
    "buildpacks" => "cc.buildpacks.buildpack_directory_key", 
    "packages" => "cc.packages.app_package_directory_key"
  }
  cc_ng_directory_keys = link('directories_to_backup')
%>

<% if p('release_level_backup') %>
  <% p('directories_to_bbr_backup').each do |directory| %>
    <% key = cc_ng_directory_keys.p(dir_mapping[directory]) %>
      rm --recursive --force ${BLOBS_DIRECTORY}/<%= key %>
      if [ -d $BACKUP_DIRECTORY/<%= key %>  ]; then
        cp --recursive --link $BACKUP_DIRECTORY/<%= key %> $BLOBS_DIRECTORY
      fi
  <% end %>
  chown --recursive $BLOBSTORE_OWNER:$BLOBSTORE_OWNER_GROUP ${BLOBS_DIRECTORY}
<% end %>

